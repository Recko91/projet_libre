{% extends "base.html.twig" %}

{% block body %}
<h1>Faire une reservation</h1>

  <form method="post">

    <div class="form-group">
      <label>Pour combien de véhicule ?</label>
      <input type="number" name="vehicule_quantity" class="form-control" required>
    </div>

    <div class="form-group">
      <label>À partir de </label>
      <input type="date" name="start_date" class="form-control" required>
    </div>

    <div class="form-group">
      <label>Jusqu'à</label>
      <input type="date" name="end_date" class="form-control" required>
    </div>

    <div class="form-group">
      <label>De</label>
      <input type="time" name="from_time" class="form-control" required>
      <label>à</label>
      <input type="time" name="to_time" class="form-control" required>
    </div>

    <div class="col-sm-6">
      <button type="submit" class="btn btn-primary">Valider</button>
    </div>
  </div>
  </form>
{% endblock %}