    <button class="btn btn-warning m-3" onclick="on()">Voir les commentaires</button>

   <div id="overlay">
    <button class="btn btn-secondary m-3" onclick="off()">Revenir à la réservation</button>
    <h2 class="text-center text-white">Commentaires</h2>


    <div class="container">
    			
		{% for list in lists %}
                <div class="row">
                    {# <div class="Nom">Nom : {{ list.nom }}</div> #}
