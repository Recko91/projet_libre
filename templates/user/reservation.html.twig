{{ form_start(formReservation )}}

	<div class="form-group">
		<label>Pour combien de véhicule ?</label>
    	{{ form_widget(formReservation.vehicleQuantity) }}
	</div>

	<div class="form-group">
		<label>À partir de </label>
    	{{ form_widget(formReservation.startDate) }}
	</div>

	<div class="form-group">
		<label>Jusqu' à </label>
    	{{ form_widget(formReservation.endDate) }}
	</div>

	<div class="form-group">
    	{{ form_widget(formReservation.save) }}
	</div>
	

{{ form_end(formReservation) }}
