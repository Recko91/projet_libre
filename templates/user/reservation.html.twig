</div>
   <div id="overlay">
    <button class="btn btn-secondary m-3" onclick="off()">Revenir à la réservation</button>
    <h2 class="text-center text-white">Commentaires</h2>


    <div class="container">
    
      {% for comment in comments %}

        <div class="col-lg-12 d-flex flex-column">

        <div class="card bg-light mb-3" style="max-width: 100%;">
          <div class="card-header"><strong>{{ comment.user.email }}</strong><div class="Date">le {{ comment.createdAt|date("d/m/Y") }}</div></div>
          <div class="card-body">
            <p>{{ comment.content }}</p>
          </div>
        </div>

      {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}

    <script> 

      function on() { 
        document.getElementById("overlay").style.display = "block"; 
      } 

      function off() { 
        document.getElementById("overlay").style.display = "none"; 
      } 

    </script> 

{% endblock %}