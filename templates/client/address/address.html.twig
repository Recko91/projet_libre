{% extends "base.html.twig" %}

{% block stylesheets %}
    <style>
        .button_add{background-color:#38b549; color:white; border:3px solid white}
    </style>
    {% endblock %}


{% block body %}
<div class="col-lg-12">
    <h1 class="text-center font mb-3">Mes adresses</h1>
    <a href="{{ path('add_address') }}"><button type="button" class="btn btn-block mb-3 font-weight-bold button_add">Ajouter une adresse</button></a>
    {# <a class="button" href="{{ path('add_address') }}">Ajouter</a> #}
</div>
{% for address in addresses %}

<div class="col-lg-12 d-flex flex-column">

    <div class="card bg-light mb-3" style="max-width: 100%;">
    <div class="card-header"># {{ address.id }}</div>
    <div class="card-body">
        <h5 class="card-title">{{ address.streetName }} <br>
            {{ address.postalCode }} {{ address.city }}, {{ address.country }}</h5>
            Prix : {{ address.price }} € <br>
            Disponibilité : {{ address.availability }} / {{ address.capacity }} </p>
    </div>
    <div class="card-footer"><a href="#"><button class="btn btn-warning mr-2">Modifier</button></a>
            <a href="#"><button class="btn btn-danger">Supprimer</button></a></div>
    </div>

</div>



{% endfor %}

{% endblock %}