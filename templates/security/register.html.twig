<!doctype html>
<html lang="fr">

	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<title>
			{% block title %}{% endblock %}
		</title>

		{% block stylesheets %}{% endblock %}
		<!-- Bootstrap CSS -->
		<link
		rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

		<!-- CSS -->

		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

		<link rel="stylesheet" href="{{ asset('css/base.css') }}">


	</head>

	<body>


		<div class="wrapper register-color">


			<div class="col-sm-12">

        <a href="{{ url('app_index') }}" class="btn btn-outline-secondary my-3" role="button" aria-disabled="true"><i class="fas fa-arrow-left"></i></a>
        <img class="mx-auto d-block" src="{{ asset('images/logo.png') }}" alt="logo Airlock" width="180"/>
        {{ form_start(form) }}
        <h1 class="text-center m-5 register">Inscription</h1>
        <div class="p-2">
          {# <div class="form-group">
            <div class="col-sm-12">
              {{ form_row(form.firstName, { 'label': 'FirstName', 'attr': {
                        'placeholder': 'FristName ...',
                        'class': 'form-control'
                      }}) }}
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-12">
                 {{ form_row(form.lastName, { 'label': 'LastName', 'attr': {
                        'placeholder': 'LastName ...',
                        'class': 'form-control'
                      }}) }}
            </div>
          </div> #}
          
          
          <div class="form-group">
            <div class="col-sm-12">
              {{ form_row(form.email, { 'label': 'ADRESSE EMAIL', 'attr': {
                        'placeholder': 'Entrer votre adresse email...',
                        'class': 'form-control'
                      }}) }}
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-12">
              {{ form_row(form.password, { 'label': 'MOT DE PASSE', 'attr': {
                      'placeholder': 'Entrer votre mot de passe...',
                      'class': 'form-control'
                    }}) }}
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-12">
                  {{ form_row(form.password_validation, { 'label': 'MOT DE PASSE', 'attr': {
                      'placeholder': 'Confirmer votre mot de passe...',
                      'class': 'form-control'
                    }}) }}
        {#       {{ form_row(form.alias, { 'label': ' Alias', 'attr': {
                      'placeholder': 'Votre alias',
                      'class': 'form-control'
                    }}) }} #}
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-12">
        {#       {{ form_row(form.phoneNumber, { 'label': ' Numero de telephone', 'attr': {
                'placeholder': '+33...',
                'class': 'form-control'
              }}) }} #}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              {# {{ form_row(form.isAdmin )}} #}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 text-center">
              <button class="btn btn-primary btn-block btn-custom">S'inscrire</button>
            </div>
          </div>
        </div>

        {{ form_end(form) }}
        </div>

		</div>


		{% block javascripts %}{% endblock %}
		<!-- jQuery first, then Popper.js, then Bootstrap JS -->
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
