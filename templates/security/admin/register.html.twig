{% extends "base.html.twig" %}

{% block body %}
  <div class="row content">
    <div class="col-md-6 mb-3">
      <img src='images/online.svg' class="img-fluid" alt=""/>
    </div>
    <div class="col-md-6">
      <h3 class="auth-title mb-4">Formulaire d'inscription</h3>

      {{ form_start(form) }}
        <div class="form-group">
          {{ form_row(form.email, {
            'label': 'Email',
            'attr': { 'class': 'form-control' }
          }) }}
        </div>

        <div class="form-group">
          {{ form_row(form.password, {
            'label': 'Mot de passe ...',
            'attr': { 'class': 'form-control' }
          }) }}
        </div>

        <div class="form-group">
          {{ form_row(form.password_validation, {
            'label': 'Confirmez votre de passe ...',
            'attr': { 'class': 'form-control' }
          }) }}
        </div>

        <button class="btn btn-class">S'inscrire</button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}